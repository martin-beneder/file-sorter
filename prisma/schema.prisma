generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model user {
  id             String    @id @unique
  email          String?   @unique
  email_verified Boolean?
  auth_session   Session[]
  key            Key[]
}

model Key {
  id              String  @id @unique
  user_id         String
  hashed_password String?
  user            user    @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model Session {
  id             String @id @unique
  user_id        String
  active_expires BigInt
  idle_expires   BigInt
  user           user   @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
}

model emailVerificationToken {
  id      String @id @unique
  userId  String
  expires BigInt
}

model passwordResetToken {
  id      String @id @unique
  userId  String
  expires BigInt
}
